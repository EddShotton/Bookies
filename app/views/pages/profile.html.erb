<h1>my profile</h1>

<h3>my listed books</h3>

<%= cl_image_tag @user.photo.key,
      width: 400, height: 300, crop: :fill %>

<% @user.books.each do |book| %>
    <li> <%= book.title %> </li>
<% end %>

<h3>My rentals</h3>
<%= @my_rentals.each do |booking| %>
  <%= booking.total_price %>
<% end %>


<h3>My listings</h3>
<%= @my_posts.each do |booking| %>
  <li><%= booking.book.title%></li>
  <li><%= booking.status%></li>
<% end %>
