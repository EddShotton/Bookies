<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Bob" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Smith" }%>
    <%= f.input :address,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "15 Cresent Lane" }%>
    <%= f.input :photo, as: :file,
                required: false,
                autofocus: true %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "b.smith@gmail.com" }%>
    <%= f.input :about,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "about yourself" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
